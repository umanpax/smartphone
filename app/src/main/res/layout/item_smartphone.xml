<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">


    <ImageView
        android:id="@+id/imv_smartphone"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="5dp"
        android:textColor="@color/teal_700"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/first_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imv_smartphone">

        <TextView
            android:id="@+id/tv_smartphone_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Iphone"
            android:textColor="@color/colorBlueButton"
            android:textSize="20sp"
            android:fontFamily="@font/nunitoregular" />

        <TextView
            android:id="@+id/tv_smartphone_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="13 pro"
            android:textColor="@color/colorBlueButton"
            android:fontFamily="@font/nunitoregular"
            android:textSize="20sp"
         />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/second_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/first_linear">

        <TextView
            android:id="@+id/tv_smartphone_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Noir"
            android:textColor="@color/colorBlueButton"
            android:textSize="20sp"
            android:fontFamily="@font/nunitoregular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_smartphone_name" />/>

        <TextView
            android:id="@+id/tv_smartphone_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="1379 EUR"
            android:fontFamily="@font/nunitoregular"
            android:textColor="@color/colorBlueButton"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/tv_smartphone_color"
            app:layout_constraintTop_toBottomOf="@+id/tv_smartphone_model" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="20dp"
        android:background="@color/colorBlueButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/second_linear" />

</androidx.constraintlayout.widget.ConstraintLayout>